<div class="row posts">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <ul class="nav nav-pills">
        <li ui-sref-active="active">
          <a ui-sref="section({ section: $stateParams.section, id: 'hot' })">Hot</a>
        </li>
        <li ui-sref-active="active">
          <a ui-sref="section({ section: $stateParams.section, id: 'fresh' })">Fresh</a>
        </li>
      </ul>
    </div>

    <div class="thumbnail" ng-repeat="post in posts" ng-if="!post.media">
      <div class="caption">
        <h3>{{ post.caption }}</h3>
      </div>
      <img ng-src="{{ post.images.large }}" alt="" class="img-post">
    </div>

    <div class="form-group">
      <a class="btn btn-block btn-primary" href="" ng-click="next()" ng-show="posts">Load More...</a>
    </div>
  </div>

</div>
